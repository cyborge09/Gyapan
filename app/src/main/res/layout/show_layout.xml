<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:text="USER INFO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:id="@+id/u" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/n"
        android:layout_marginBottom="15dp"
        android:textSize="19dp"
        android:layout_below="@+id/u"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/ad"
        android:layout_marginBottom="15dp"
        android:textSize="19dp"
        android:layout_below="@+id/n"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginBottom="15dp"
        android:id="@+id/e"
        android:textSize="19dp"
        android:layout_below="@+id/ad"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:text="Phone No :"
        android:id="@+id/p"
        android:textSize="19dp"
        android:layout_below="@+id/e"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age :"
        android:layout_marginBottom="15dp"
        android:id="@+id/a"
        android:textSize="19dp"
        android:layout_below="@+id/p"/>

    <TextView
        android:text="Sex :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s"
        android:layout_marginBottom="15dp"
        android:textSize="19dp"
        android:layout_below="@id/a"/>


    <TextView
        android:hint="address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ad"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u"
        android:id="@+id/addressi" />

    <TextView
        android:hint="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/e"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u"
        android:id="@+id/emaili" />

    <TextView
        android:hint="ph no."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u"
        android:id="@+id/phonei" />

    <TextView
        android:hint="age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/a"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u"
        android:id="@+id/agei" />

    <TextView
        android:hint="sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/e"
        android:id="@+id/sexi"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u"
        android:layout_alignBottom="@+id/s" />

    <TextView
        android:hint="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/namei"
        android:layout_alignBottom="@+id/n"
        android:layout_alignLeft="@+id/u"
        android:layout_alignStart="@+id/u" />


</RelativeLayout>